#include <commons/config.h>
#include <commons/string.h>
#include <stdlib.h>
#include <string.h>
#include <string.h>

int main(int argc, char** argv){

	// Leer archivo config.conf
	leerArchivoConfig();


	return EXIT_SUCCESS;
}

void leerArchivoConfig() {
	infoConfig = malloc(sizeof(t_infoConfig));
	t_config *config = config_create("config.conf");

	if (config == NULL) {
		puts("El archivo config.conf no se pudo cargar");
		config_destroy(config);
		abort();
	}

	infoConfig->ip = config_get_string_value(config, "IP");
	infoConfig->puerto = config_get_string_value(config, "PUERTO");

	config_destroy(config);
}
