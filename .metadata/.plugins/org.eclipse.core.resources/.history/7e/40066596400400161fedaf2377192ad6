#include <commons/config.h>
#include <commons/string.h>
#include <stdlib.h>
#include <string.h>
#include <consola.h>

int main(int argc, char** argv){

	// Leer archivo config.conf
	leerArchivoConfig();


	free();
	return EXIT_SUCCESS;
}

void leerArchivoConfig() {
	localConfig = malloc(sizeof(t_contexto));
	t_config *config = config_create("config.conf");

	if (config == NULL) {
		puts("El archivo config.conf no se pudo cargar");
		config_destroy(config);
		abort();
	}

	contexto->puerto = config_get_string_value(config, "IP")

	config_destroy(config);
}
